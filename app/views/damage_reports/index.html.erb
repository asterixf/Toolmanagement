<div class="mx-3 my-3">
    <div class="row justify-content-end">
    <div class="col-lg-6 col-md-8 my-2">
      <form class="d-flex align-items-center">
        <label for="start_date">Start:</label>
        <input type="date" name="start_date" id="start_date" class="form-control mx-2">
        <label for="end_date">End:</label>
        <input type="date" name="end_date" id="end_date" class="form-control mx-2">
        <button type="submit" class="btn btn-primary">Filter</button>
      </form>
    </div>
    <p class= "text-end" style="font-size: 12px">*Default values are set to this month, please enter dates for custom search.</p>
  </div>
  <% if @damage_reports.empty? %>
    <div class="my-3">
      <h1 class="fw-bold text-center">No Reports found</h1>
    </div>
  <% else %>
    <div class="scroll-container rounded-4 bg-light">
      <table class="table table-striped table-bordered table align-middle shadow-sm p-3 mb-5 bg-body-tertiary rounded centered-table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Machine_num</th>
            <th>Operator</th>
            <th>BCL</th>
            <th>Process_Eng</th>
            <th>Damage_Part</th>
            <th>Status</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @damage_reports.each do |report| %>
          <tr>
            <td><%= report.id %></td>
            <td><%= report.machine_num %></td>
            <td><%= report.operator %></td>
            <td><%= report.bcl %></td>
            <td><%= report.process_eng %></td>
            <td><%= report.damaged_part %></td>
            <td><%= report.status %></td>
            <td>
            <%= link_to damage_report_path(report) do %>
            <i class="fa-solid fa-eye"></i>
            <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
