<div class="container my-3">
  <%= link_to "New_user", new_user_path, class: "btn btn-primary mb-3" %>
  <div class="scroll-container rounded-4 bg-light">
    <table class="table table-striped table-bordered table align-middle shadow-sm p-3 mb-5 bg-body-tertiary rounded centered-table">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Email</th>
          <th>Department</th>
          <th>Position</th>
          <th>Admin</th>
          <th></th>
        </tr>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= user.id %>
            </td>
            <td>
              <%= user.name %> <%= user.lastname %>
            </td>
            <td>
              <%= user.email %>
            </td>
            <td>
              <%= user.department %>
            </td>
            <td>
              <%= user.position %>
            </td>
            <td>
              <% if user.admin %>
                Admin
              <% else %>
                ---
              <% end %>
            </td>
            <td>
              <%= link_to edit_user_path(user) do %>
                <i class="fa-solid fa-user-pen"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
  </div>
</div>
