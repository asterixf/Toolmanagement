<div class="m-4">
  <h1 class="text-center">Tools</h1>
  <div class="scroll-container">
      <table class="table table-striped table-bordered table align-middle ">
        <thead>
          <tr>
            <th>Id</th>
            <th>Alias</th>
            <th>SAP</th>
            <th>Plant</th>
            <th>BU</th>
            <th>Technology</th>
            <th>Volume</th>
            <th>Customer</th>
            <th>Capacity</th>
            <th>location</th>
            <th>Damaged</th>
            <th>Blocked</th>
            <th>Active</th>
            <th>Spare</th>
            <th>Segment</th>
            <th>Available</th>
          </tr>
        </thead>
        <tbody>
        <% @tools.each do |tool| %>
        <tr>
        <td><%= tool.id %></td>
        <td>
        <%= link_to tool_path(tool), class:"link-blue" do %>
        <%= tool.alias %>
        <% end %>
        </td>
        <td><%= tool.sap %></td>
        <td><%= tool.plant%></td>
        <td><%= tool.bu %></td>
        <td><%= tool.technology %></td>
        <td><%= tool.volume %></td>
        <td><%= tool.customer %></td>
        <td><%= tool.capacity %></td>
        <td><%= tool.location %></td>
        <td><%= tool.damaged %></td>
        <td><%= tool.blocked %></td>
        <td><%= tool.active %></td>
        <td><%= tool.spares %></td>
        <td><%= tool.segment %></td>
        <td><%= tool.available %>%</td>
        </tr>
        <% end %>
        </tbody>
      </table>
  </div>
</div>
