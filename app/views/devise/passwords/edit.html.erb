<div class="container">
  <div class="text-center fw-bold"><h2>Change your password</h2></div>
  <div class="registration-form">
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password,
                    label: "New password",
                    required: true,
                    autofocus: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    label: "Confirm your new password",
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "submit", class:"btn btn-primary mb-3" %>
      </div>
    <% end %>

     <%= link_to new_registration_path(resource_name) do %>
       <p> Sign up <i class="fa-solid fa-arrow-right"></i></p>
      <% end %>
      <%= link_to new_session_path(resource_name) do %>
        <p>Log In <i class="fa-solid fa-arrow-right"></i></p>
      <% end %>
  </div>
</div>
